{
    "compilerOptions": {
        "outDir": "./public/",
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        
        "target": "es6",
        "jsx": "react",
        "types" : ["node", "react", "react-dom", "bem-cn", "react-redux"],
        "experimentalDecorators":true
    },
    "exclude": [
        "./node_modules"
    ],
    "include": [
        "./src/**/*"
    ]
}